@model PROJECTBDS.Models.tblImage

<div id="modal-edit" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Cập nhật</h4>
            </div>
            @using (Html.BeginForm("EditImageS", "ImageManage", FormMethod.Post))
            {
                <div class="modal-body">
                    <div class="row" style="margin-top: 20px">
                        <div class="col-md-12">
                            @Html.HiddenFor(model => model.Id)
                            @Html.HiddenFor(model => model.LandId)
                            @Html.HiddenFor(model => model.ProjectId)
                            @Html.HiddenFor(model => model.URL)
                            <div class="form-group">
                                <label class="control-label col-lg-2 col-md-2">Tiêu đề</label>
                                <div class="col-lg-4 col-md-4">
                                    @Html.TextBoxFor(model => model.Image, new { @class = "form-control", required = "required" })
                                </div>
                                <label class="control-label col-lg-2 col-md-2">Ảnh</label>
                                <div class="col-lg-4 col-md-4">

                                    <img src="@Model.URL" id="_Image" style="width:100px;height:100px;border:1px solid #ff6a00" />
                     
                                  
                                    <input type="button" class="btn btn-n" onclick="openfile()" value="Open">
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-lg-2 col-md-2">Loại ảnh</label>
                                <div class="col-lg-4 col-md-4">
                                    @Html.DropDownListFor(model => model.DictionaryId, ViewBag.DictionaryId as List<SelectListItem>, new { name = "Title", id = "DictionaryId", @class = "form-control" })
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-lg-2 col-md-2">Order</label>
                                <div class="col-lg-4 col-md-4">
                                    @Html.TextBoxFor(model => model.Orders, new { @class = "form-control" })
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary">Lưu</button>
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                </div>
            }
        </div>
    </div>
</div>






