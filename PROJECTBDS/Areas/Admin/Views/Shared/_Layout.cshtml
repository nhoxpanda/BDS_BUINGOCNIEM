<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>BĐS BÙI NGỌC NIỆM | @ViewBag.Title</title>
    <!-- Tell the browser to be responsive to screen width -->
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport" />
    @Styles.Render("~/Content/Admin")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/header")
    <style>
        .cursorpointer {
            cursor: pointer;
        }
         
    </style>
    @RenderSection("style", required: false)
</head>
<body class="hold-transition skin-blue " id="bodymain">
    <div class="wrapper" id="wrapper">
        @Html.Partial("_Partial_Header")
        <!-- Left side column. contains the logo and sidebar -->
        @Html.Partial("_Partial_Navigation")
        <!-- Content Wrapper. Contains page content -->
        <div class="content-wrapper">
            <!-- Content Header (Page header) -->
            @RenderBody()
            <!-- /.content -->
        </div>
        <!-- /.content-wrapper -->
        <footer class="main-footer">
            <div class="pull-right hidden-xs">
                <b>Version</b> 1.0.0
            </div>
            <strong>Copyright &copy; @DateTime.Now.Year <a href="/">BĐS Bùi Ngọc Niệm</a>.</strong> All rights reserved.
        </footer>
        <div class="control-sidebar-bg"></div>
    </div>
        @Scripts.Render("~/bundles/footer")
        <script src="~/Content/bootstrap/js/bootstrap.min.js"></script>
    <script src="~/Areas/Admin/Content/JS/bootstrap-colorpicker.min.js"></script>

    <script src="~/Areas/Admin/Content/JS/bootstrap-colorpicker-plus.min.js"></script>

    @RenderSection("scripts", required: false)
    <script>
        $(function () {
            var url = window.location.href.substr(window.location.href.lastIndexOf("/") + 1);
            $('[href$="' + url + '"]').parents().addClass("active");
        });
        ///////
        var demo1 = $('#demo1');
        demo1.colorpickerplus();
        demo1.on('changeColor', function (e, color) {
            if (color == null)
                $(this).val('transparent').css('background-color', '#fff');//tranparent
            else
                $(this).val(color).css('background-color', color);
        });
    </script>
</body>
</html>
