@using PagedList
@using PagedList.Mvc
@model IPagedList<PROJECTBDS.Models.tblContact>
@{
    ViewBag.Title = "Subscribe";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<section class="content-header">
    <h1>
        Danh sách đăng ký bản tin
    </h1>
    <ol class="breadcrumb">
        <li><a href="/"><i class="fa fa-dashboard"></i> Home</a></li>
        <li class="active">Danh sách đăng ký bản tin</li>
    </ol>
</section>
<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                    <div class="callout callout-info lead">
                        <a href="@Url.Action("Subscribe", "ContactManage")" class="btn btn-primary"><i class="fa fa-refresh"></i>&nbsp;Nạp</a>
                    </div>
                </div>
                <div class="box-body" id="data-customer">
                    <table id="postTable" class="table table-striped table-bordered table-hover table-checkable order-column nomenutable">
                        <thead>
                            <tr>
                                <th> Họ tên </th>
                                <th> Điện thoại </th>
                                <th> Email </th>
                                <th> Ngày đăng ký </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr class="odd gradeX" id="post@(item.Id)">
                                    <td>@item.Name</td>
                                    <td>@item.Phone</td>
                                    <td>@item.Email</td>
                                    <td>@string.Format("{0:dd/MM/yyyy}", item.Date)</td>
                                </tr>
                            }

                        </tbody>
                    </table>
                </div>
                <div id='Paging' style="text-align: right; padding-right:10px">
                    @Html.PagedListPager(Model, page => Url.Action("Subscribe", new { page }))
                </div>
            </div>
        </div>
    </div>
</section>