@using Humanizer
@using PagedList.Mvc
@using PROJECTBDS.ViewModels
@model PagedList.IPagedList<PROJECTBDS.Models.tblLand>

<section class="content-bottom page-child page-profile">
    <div class="container">
        <div class="row">
            <div class="col-md-9">
                <div class="box box-border box-profile">
                    <div class="box-title">
                        Quản lý tin rao bán, cho thuê
                    </div>
                    <div class="box-content">
                        <div class="table-responsive">
                            <table class="table real-member-table">
                                <thead>
                                <tr>
                                    <th>Mã tin</th>
                                    <th style="width:40%">Tiêu đề</th>
                                    <th>Trạng thái</th>
                                    <th>Ngày đăng</th>
                                    <th style="width:142px;">Action</th>
                                </tr>
                                </thead>
                                <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.Id</td>
                                        <td><a href="@Url.Action("EditReal", "User", new {id = item.Id })">@item.Title.Truncate(150)</a></td>
                                        <td></td>
                                        <td>@Convert.ToDateTime(item.CreateDate).ToString("dd/MM/yyyy")</td>
                                        <td>
                                            <div class="btn-group" role="group" aria-label="Actions">
                                                <a class="btn btn-sm btn-success" href="@Url.Action("EditReal", "User", new {id = item.Id})">Sửa</a>
                                                <a class="btn btn-sm btn-warning" href="@Url.Action("DeleteReal", "User", new {id = item.Id})">Xóa</a>
                                            </div>
                                        </td>
                                    </tr>
                                }
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <div class="pagination-wraper text-center">
                        @Html.PagedListPager(Model, page => Url.Action("RealIndex", new { page, query = ViewBag.query }))
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                @Html.Partial("_UserPartial", ViewBag.User as UserProfileViewModel)
            </div>
        </div>
    </div>
</section>