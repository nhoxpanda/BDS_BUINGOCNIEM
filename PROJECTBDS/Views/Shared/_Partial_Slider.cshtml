@using PROJECTBDS.Models
@model IEnumerable<tblImage>

<div class="slider col-lg-8 col-md-8 col-sm-6 col-xs-12">
    <!-- slider-->
    <!---------- Slide Show---------->
    <div id="slider-demo" class="owl-carousel owl-theme">
       @foreach (var item in Model)
       {
        <div class="owl-item">
            <div class="item">
                <a href="@item.URL" target="_blank">
                    <img src="~/Images/Sliders/@item.Image" alt="@item.URL">
                </a>
            </div>
        </div>
       }
    </div>
    <!-- end slider-->
</div>