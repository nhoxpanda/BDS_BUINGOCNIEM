
<div class="event-box">
    <div class="ads-r">
        <h4>Đăng ký<br> nhận tin bất động sản</h4>
        <div class="box-input">
            @using (Ajax.BeginForm("Subscribe", "Home", null, new AjaxOptions { OnSuccess = "OnSuccessSubscribe" }, new { id = "subscribe-form" }))
            {
                <div class="form-group field-frontcontact-name required">
                    <input type="text" id="frontcontact-name" class="form-control" name="ContactName" placeholder="Họ và tên" required /><span class="help-block"></span>
                </div>
                <div class="form-group field-frontcontact-phone required">
                    <input type="text" id="frontcontact-phone" class="form-control" name="ContactPhone" placeholder="Số điện thoại" required /><span class="help-block"></span>
                </div>
                <div class="form-group field-frontcontact-email required">
                    <input type="text" id="frontcontact-email" class="form-control" name="ContactEmail" placeholder="Email" required /><span class="help-block"></span>
                </div>
                <div class="form-group">
                    <button type="submit" class="">Đăng ký</button>
                </div>
            }
        </div>
    </div>

    @Html.Action("_Partial_Advertisement", "Home")
</div>